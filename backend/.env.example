# Server Configuration
PORT=8080
NODE_ENV=production

# Timezone (IST)
TZ=Asia/Kolkata

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here

# Meta / WhatsApp Cloud API
# Get these from: https://developers.facebook.com/apps/ → Your App → Settings → Basic

# App ID: Found in App Dashboard → Settings → Basic
META_APP_ID=your-meta-app-id

# App Secret: Found in App Dashboard → Settings → Basic (click "Show" to reveal)
# Used for webhook signature verification
META_APP_SECRET=your-meta-app-secret

# Webhook Verify Token: YOU CREATE THIS (any random string)
# Must match what you enter in Meta Business Manager webhook configuration
# Generate with: openssl rand -hex 32
META_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# NOTE: Individual WhatsApp number access tokens are stored in the database
# You add them via the UI when connecting a WhatsApp number
# NOT needed here in .env file

# OpenAI Configuration (Global - stored in DB but can be set here for initial setup)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Security
JWT_SECRET=your-jwt-secret-for-additional-security

# Optional: Logging
LOG_LEVEL=info
